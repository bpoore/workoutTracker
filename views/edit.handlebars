<form class="form-horizontal" method='POST'>
	<fieldset class="form-group">
		<legend>Edit An Exercise</legend>
		<input hidden type="text" id="exId" value="{{id}}">
		<div class='form-group'>
			<label class="col-sm-2 control-label">Exercise:</label>
			<div class="col-sm-10">
				<input type='text' name='exerciseName' id='exerciseName' value="{{results.name}}">
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Reps:</label>
			<div class="col-sm-10">
				<input type='number' name='reps' id='reps' value="{{results.reps}}">
			</div>
		</div>
		<div class='form-group'>
			<label class="col-sm-2 control-label">Weight:</label>
			<div class="col-sm-10">
				<input type='number' name='weight' id='weight' value="{{results.weight}}">
				<select class='selectpicker' name='lbs' id='lbs-value' value="{{results.lbs}}">
					<option value='1'>lbs</option>
					<option value='0'>kgs</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Date:</label>
			<div class="col-sm-10">
				<input type='date' name='exercise-date' id='exercise-date'>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<input type="submit" class="btn btn-primary" id='submit-update'>
			</div>
		</div>
	</fieldset>
</form>	
