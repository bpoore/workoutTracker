<div class='jumbotron'>
	<div class='container'>
		<h1>Weight Lifting Log</h1>
	</div>
</div>	
<form class="form-horizontal" method='POST'>
	<fieldset class="form-group">
		<legend>Enter an Exercise</legend>
		<div class='form-group'>
			<label class="col-sm-2 control-label">Exercise:</label>
			<div class="col-sm-10">
				<input type='text' name='exerciseName' id='exerciseName'>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Reps:</label>
			<div class="col-sm-10">
				<input type='number' name='reps' id='reps'>
			</div>
		</div>
		<div class='form-group'>
			<label class="col-sm-2 control-label">Weight:</label>
			<div class="col-sm-10">
				<input type='number' name='weight' id='weight'>
				<select class='selectpicker' name='lbs' id='lbs-value'>
					<option value='1'>lbs</option>
					<option value='0'>kgs</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Date:</label>
			<div class="col-sm-10">
				<input type='date' name='exercise-date' id='exercise-date'>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<input type="submit" class="btn btn-primary" id='submit-exercise'>
			</div>
		</div>
	</fieldset>
</form>	


<h1>Completed Exercises</h1>
<table class="table table-striped">
	<tr>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>Date</th>
		<th>Units</th>
		<th>Delete</th>
		<th>Update</th>
	</tr>
	<tbody id='exerciseData'></tbody>
</table>



